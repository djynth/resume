- timeline = { }
- timeline.start = new Date(2007, 1, 1)
- timeline.end   = new Date(2015, 3, 15)
- timeline.duration = timeline.end.getTime() - timeline.start.getTime()
- timeline.getHeight = function(d) {
-     if (d.getTime() >= timeline.end.getTime()) {
-         return 100
-     }
-     if (d.getTime() <= timeline.start.getTime()) {
-         return 0
-     }
-     return 100 * (d.getTime() - timeline.start.getTime()) / timeline.duration
- }

